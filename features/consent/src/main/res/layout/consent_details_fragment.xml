<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <ScrollView
                    android:layout_margin="@dimen/content_margin_medium"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:background="@drawable/grey_background_with_border"
                    android:layout_width="match_parent"
                    android:padding="@dimen/content_margin_medium"
                    android:layout_height="1000dp">
                <Button
                    android:id="@+id/btn_edit"
                    android:text="@string/edit"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="wrap_content"
                    android:foreground="?attr/selectableItemBackground"
                    android:background="@drawable/secondary_button_background"
                    android:layout_height="@dimen/secondary_button_height"/>

                <TextView
                    android:id="@+id/tv_requester_name"
                    style="@style/ConsentRequestHiuDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_edit"
                    android:text="Dr. Shruti Nair" />

                <TextView
                    android:id="@+id/tv_requester_organization"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    style="@style/ConsentRequestHiuDetails"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_requester_name"
                    android:text="Infinity Health care and diagnostics" />

                <TextView
                    style="@style/ConsentRequestItemHeader"
                    android:id="@+id/tv_purpose_of_request_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/content_margin_small"
                    android:layout_marginTop="@dimen/content_margin_extra_small"
                    android:text="@string/purpose_of_request"
                    app:layout_constraintLeft_toRightOf="@+id/ic_purpose_of_request"
                    app:layout_constraintTop_toBottomOf="@id/tv_requester_organization"/>

                <TextView
                    style="@style/ConsentRequestItemValue"
                    android:id="@+id/tv_purpose_of_request"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/content_margin_small"
                    app:layout_constraintLeft_toRightOf="@+id/ic_purpose_of_request"
                    app:layout_constraintTop_toBottomOf="@+id/tv_purpose_of_request_label"
                    android:text="General Consulting" />

                <TextView
                    android:id="@+id/tv_requests_information_duration_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/content_margin_small"
                    style="@style/ConsentRequestItemHeader"
                    android:layout_marginTop="@dimen/content_margin_medium"
                    android:text="@string/requests_information"
                    app:layout_constraintLeft_toRightOf="@+id/ic_requests_info"
                    app:layout_constraintTop_toBottomOf="@id/tv_purpose_of_request" />


                <TextView
                    style="@style/ConsentRequestItemHeader"
                    android:id="@+id/tv_requests_information_from_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/content_margin_small"
                    app:layout_constraintLeft_toRightOf="@+id/ic_purpose_of_request"
                    app:layout_constraintTop_toBottomOf="@+id/tv_requests_information_duration_label"
                    android:text="From" />

                <TextView
                    android:layout_marginLeft="@dimen/content_padding_medium"
                    style="@style/ConsentRequestItemValue"
                    app:layout_constraintTop_toBottomOf="@+id/tv_requests_information_duration_label"
                    app:layout_constraintLeft_toRightOf="@+id/tv_requests_information_from_label"
                    android:text="01/01/17"
                    android:id="@+id/tv_requests_info_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    style="@style/ConsentRequestItemHeader"
                    android:id="@+id/tv_requests_information_to_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/content_padding_medium"
                    app:layout_constraintLeft_toRightOf="@+id/tv_requests_info_from"
                    app:layout_constraintTop_toBottomOf="@+id/tv_requests_information_duration_label"
                    android:text="to" />


                <TextView
                    android:layout_marginLeft="@dimen/content_padding_medium"
                    app:layout_constraintTop_toBottomOf="@+id/tv_requests_information_duration_label"
                    app:layout_constraintLeft_toRightOf="@+id/tv_requests_information_to_label"
                    android:text="05/12/19"
                    android:id="@+id/tv_requests_info_to"
                    style="@style/ConsentRequestItemValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_requests_info_type_label"
                    style="@style/ConsentRequestItemHeader"
                    app:layout_constraintTop_toBottomOf="@id/tv_requests_information_from_label"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/content_margin_extra_extra_large"
                    android:text="@string/requests_informatio_type"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvRequestInfoTypes"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/content_margin_medium"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_requests_info_type_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:listitem="@layout/consent_request_info_type_item"/>
                        <TextView
                            style="@style/ConsentRequestItemHeader"
                            android:id="@+id/tv_expiry_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/content_margin_extra_small"
                            android:text="@string/consent_expiry"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/rvRequestInfoTypes"/>

                        <TextView
                            style="@style/ConsentRequestItemValue"
                            android:id="@+id/tv_expiry"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_expiry_label"
                            android:text="5 pm, 05/12/19" />
        </androidx.constraintlayout.widget.ConstraintLayout>
                </ScrollView>

                <LinearLayout
                    android:elevation="10dp"
                    android:orientation="horizontal"
                    android:id="@+id/button_bottom_bar"
                    android:padding="@dimen/content_margin_small"
                    android:background="@color/white"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="79dp">

                        <Button
                            android:layout_marginRight="8dp"
                            android:layout_gravity="center_vertical"
                            android:text="@string/deny"
                            android:drawableLeft="@drawable/ic_deny"
                            style="@style/Button"
                            android:id="@+id/btn_deny"
                            android:textColor="@color/red"
                            android:background="@drawable/secondary_button_background_red"
                            android:layout_width="0dp"
                            android:layout_weight=".3"
                            android:layout_height="wrap_content"/>
                        <Button
                            android:layout_marginLeft="6dp"
                            android:layout_gravity="center_vertical"
                            android:text="@string/grand_request"
                            android:drawableLeft="@drawable/ic_grant"
                            style="@style/Button"
                            android:layout_weight=".7"
                            android:id="@+id/btn_grant"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
