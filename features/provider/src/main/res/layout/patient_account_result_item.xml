<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="careContext"
            type="in.org.projecteka.jataayu.provider.model.CareContext" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/content_margin_primary"
        android:paddingStart="0dp"
        android:paddingEnd="0dp">

        <CheckBox
            android:id="@+id/cb_select_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_reference_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/content_margin_secondary"
            android:maxLines="1"
            android:text="@{careContext.referenceNumber}"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tv_patient_name"
            app:layout_constraintStart_toEndOf="@+id/cb_select_account"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="7210XXXXXX765" />

        <TextView
            android:id="@+id/tv_patient_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/content_margin_secondary"
            android:maxLines="2"
            android:singleLine="true"
            android:text="@{careContext.display}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cb_select_account"
            app:layout_constraintTop_toBottomOf="@+id/tv_reference_number"
            tools:text="General Diagnosis" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>