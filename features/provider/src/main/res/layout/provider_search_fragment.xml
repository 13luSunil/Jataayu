<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="providerInfo"
            type="in.org.projecteka.jataayu.core.model.ProviderInfo" />

        <variable
            name="clearButtonVisibility"
            type="Integer" />

        <variable
            name="inEditMode"
            type="Boolean" />

        <variable
            name="selectedProviderName"
            type="String" />

        <variable
            name="mobile"
            type="String" />

        <variable
            name="clickHandler"
            type="in.org.projecteka.jataayu.provider.ui.handler.ProviderSearchScreenHandler" />

        <variable
            name="textWatcher"
            type="in.org.projecteka.jataayu.provider.domain.ProviderNameWatcher" />

        <variable
            name="progressBarVisibility"
            type="Integer" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/provider_search_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context="in.org.projecteka.jataayu.provider.ui.ProviderSearchActivity">

        <TextView
            android:id="@+id/tv_search_provider_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/content_margin_large"
            android:drawablePadding="@dimen/content_padding_small"
            android:padding="@dimen/content_padding_medium"
            android:paddingStart="@dimen/content_margin_extra_large"
            android:paddingEnd="@dimen/content_margin_extra_large"
            android:text="@string/search_health_information_provider"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_selected_provider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/search_edittext_height"
            android:layout_marginStart="@dimen/content_margin_medium"
            android:layout_marginTop="@dimen/content_margin_medium"
            android:layout_marginEnd="@dimen/content_margin_medium"
            android:background="@drawable/rounded_corners_bg_disabled"
            android:clickable="true"
            android:drawableEnd="@drawable/ic_clear_provider"
            android:drawablePadding="@dimen/content_padding_medium"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="start|center_vertical"
            android:onClick="@{clickHandler::onClearSelectionClick}"
            android:padding="@dimen/content_padding_medium"
            android:paddingStart="@dimen/content_margin_extra_large"
            android:paddingEnd="@dimen/content_margin_extra_large"
            android:popupElevation="0dp"
            android:singleLine="true"
            android:text="@{selectedProviderName}"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_search_provider_label"
            app:selected="@{!inEditMode}"
            app:toggledVisibility="@{!inEditMode}"
            tools:text="Max Hospital, Kochi" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_autocomplete"
            android:layout_width="match_parent"
            android:layout_height="@dimen/search_edittext_height"
            android:layout_marginStart="@dimen/content_margin_medium"
            android:layout_marginEnd="@dimen/content_margin_medium"
            android:background="@drawable/rounded_corners_selector"
            android:transitionName="search"
            app:cardElevation="@dimen/content_padding_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_search_provider_label"
            app:toggledVisibility="@{inEditMode}"
            tools:visibility="gone">

            <EditText
                android:id="@+id/sv_provider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/search_edittext_height"
                android:background="@drawable/rounded_corners_bg"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_search"
                android:drawablePadding="@dimen/content_padding_extra_large"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:imeOptions="actionSearch"
                android:importantForAutofill="no"
                android:inputType="textAutoComplete|textAutoCorrect"
                android:padding="@dimen/content_padding_medium"
                android:paddingStart="@dimen/content_margin_extra_large"
                android:paddingEnd="@dimen/content_margin_extra_large"
                android:popupElevation="0dp"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                app:onValueChanged="@{textWatcher}"
                tools:ignore="RtlHardcoded">

                <requestFocus android:value="true" />
            </EditText>

            <ImageView
                android:id="@+id/iv_clear_results"
                android:layout_width="@dimen/clear_button_dimensions"
                android:layout_height="@dimen/clear_button_dimensions"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="@dimen/content_margin_extra_large"
                android:background="@drawable/ic_clear_all"
                android:onClick="@{clickHandler::onClearTextButtonClick}"
                android:visibility="@{clearButtonVisibility}"
                tools:visibility="visible" />
        </com.google.android.material.card.MaterialCardView>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="cv_autocomplete,tv_selected_provider" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/content_margin_medium"
            android:layout_marginEnd="@dimen/content_margin_medium"
            app:cardElevation="@dimen/content_padding_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/barrier"
            app:toggledVisibility="@{inEditMode}">

            <LinearLayout
                android:id="@+id/no_results_found_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:orientation="vertical"
                android:paddingStart="@dimen/content_margin_extra_large"
                android:paddingEnd="@dimen/content_margin_extra_large"
                android:visibility="gone">

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/provider_name" />

                <TextView
                    android:id="@+id/provider_name"
                    style="?android:attr/dropDownItemStyle"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/listPreferredItemHeight"
                    android:ellipsize="marquee"
                    android:gravity="start|center_vertical"
                    android:singleLine="true"
                    android:text="@string/no_results_found"
                    android:textAppearance="?android:attr/textAppearanceLargePopupMenu"
                    android:textSize="@dimen/text_size_small"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_search_results"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:visibility="gone" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/lbl_mobile_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_size_small"
            android:drawablePadding="@dimen/content_padding_small"
            android:padding="@dimen/content_padding_medium"
            android:paddingStart="@dimen/content_margin_extra_large"
            android:paddingEnd="@dimen/content_padding_extra_large"
            android:text="@string/verified_mobile_number"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/barrier"
            app:toggledVisibility="@{!inEditMode}" />

        <TextView
            android:id="@+id/tv_mobile_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/content_padding_small"
            android:padding="@dimen/content_padding_medium"
            android:paddingStart="@dimen/content_margin_extra_large"
            android:paddingEnd="@dimen/content_margin_extra_large"
            android:text="@{mobile}"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lbl_mobile_number"
            app:toggledVisibility="@{!inEditMode}"
            tools:text="98765 43210" />

        <FrameLayout
            android:id="@+id/button_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/btn_search"
                style="@style/Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/content_margin_medium"
                android:onClick="@{clickHandler::onSearchButtonClick}"
                android:text="@string/link_provider"
                tools:text="@string/link_provider" />
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/progressbar_dimmed_bg"
            android:clickable="true"
            android:descendantFocusability="blocksDescendants"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:visibility="@{progressBarVisibility}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="gone">

            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />

            <TextView
                android:id="@+id/textView"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/progress_bar"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/looking_up_info"
                android:textColor="@color/white" />

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>