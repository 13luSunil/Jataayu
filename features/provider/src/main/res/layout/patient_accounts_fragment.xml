<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="selectedProviderName"
            type="String" />

        <variable
            name="mobile"
            type="String" />

        <variable
            name="accountsCountLabel"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="@dimen/content_margin_primary">

        <TextView
            android:id="@+id/tv_selected_provider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{selectedProviderName}"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/app_black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Max Hospital, Kochi" />

        <TextView
            android:id="@+id/lbl_primary_identifier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/content_margin_primary"
            android:text="@string/primary_identifier"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_selected_provider" />

        <TextView
            android:id="@+id/tv_mobile_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{mobile}"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/app_black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lbl_primary_identifier"
            tools:text="98765 43210" />

        <TextView
            android:id="@+id/lbl_accounts_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/content_margin_primary"
            android:drawablePadding="@dimen/content_padding_small"
            android:gravity="right"
            android:padding="@dimen/content_padding"
            tools:text="5 accounts associated found"
            android:text="@{accountsCountLabel}"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_mobile_number" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSearchResults"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lbl_accounts_count"
            tools:layout_editor_absoluteX="1dp"
            tools:listitem="@layout/patient_account_result_item" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>