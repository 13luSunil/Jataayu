<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data >
        <variable
            name="mobileNumberWatcher"
            type="in.org.projecteka.jataayu.registration.listener.MobileNumberChangeWatcher" />
        <variable
            name="isValidMobileNumber"
            type="Boolean" />
        <variable
            name="clickHandler"
            type="in.org.projecteka.jataayu.registration.listener.ContinueClickHandler" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/button_height"
        android:paddingEnd="@dimen/button_height"
        android:clipToPadding="false"
        tools:context=".ui.fragment.RegistrationFragment">
        <TextView
            style="@style/TextAppearance.ListItemSubHeader"
            android:layout_marginTop="200dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/tv_mobile_number_title"
            android:text="@string/enter_mobile_number_to_verify"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="wrap_content"/>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_mobile_number"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/content_margin_extra_small"
            android:layout_height="@dimen/button_height"
            app:cardElevation="@dimen/content_padding_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_mobile_number_title">

            <EditText
                android:maxLength="10"
                android:layout_margin="@dimen/content_margin_medium"
                android:id="@+id/tv_mobile_number"
                android:layout_width="match_parent"
                app:onValueChanged="@{mobileNumberWatcher}"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawableLeft="@drawable/ic_mobile"
                android:drawablePadding="@dimen/content_padding_extra_large"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"/>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:text="@string/continue_text"
            android:layout_marginTop="30dp"
            android:onClick="@{clickHandler::onContinueClick}"
            app:toggledVisibility="@{isValidMobileNumber}"
            app:layout_constraintTop_toBottomOf="@id/cv_mobile_number"
            app:layout_constraintLeft_toLeftOf="parent"
            style="@style/Button.Secondary"
            android:layout_height="@dimen/button_height"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>