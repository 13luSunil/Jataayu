<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="progressBarVisibility"
            type="Boolean" />

        <variable
            name="progressBarMessage"
            type="String" />

        <variable
            name="bottomNavListener"
            type="com.google.android.material.bottomnavigation.BottomNavigationView.OnNavigationItemSelectedListener" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/progressbar_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/progressbar_dimmed_bg"
            android:clickable="true"
            android:descendantFocusability="blocksDescendants"
            android:elevation="8dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            app:toggledVisibility="@{progressBarVisibility}"
            tools:ignore="MissingDefaultResource">

            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />

            <TextView
                android:id="@+id/progressbar_text"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/progress_bar"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:paddingLeft="@dimen/toolbar_size"
                android:paddingRight="@dimen/toolbar_size"
                android:text="@{progressBarMessage, default=``}"
                android:textColor="@color/white" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                tools:context="in.org.projecteka.jataayu.ui.LauncherActivity">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_marginEnd="@dimen/fab_margin"
                    android:layout_marginBottom="@dimen/fab_margin_bottom"
                    app:srcCompat="@drawable/ic_add" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <FrameLayout
                        android:id="@+id/fragment_container"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.bottomnavigation.BottomNavigationView
                        android:id="@+id/bottom_navigation"
                        style="@style/Widget.BottomNavigationView"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="bottom"
                        app:itemIconTint="@drawable/bottom_nav_tab_color"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:menu="@menu/menu_bottom_nav"
                        app:onNavigationItemSelected="@{bottomNavListener}" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.coordinatorlayout.widget.CoordinatorLayout>

        </LinearLayout>
    </RelativeLayout>
</layout>